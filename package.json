{
  "author": "jdiaz5513",
  "bugs": {
    "url": "https://github.com/jdiaz5513/capnp-ts/issues"
  },
  "description": "Strongly typed Cap'n Proto implementation for the browser and Node.js using TypeScript",
  "devDependencies": {
    "@types/benchmark": "^2.1.0",
    "@types/debug": "^4.1.5",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^15.3.1",
    "@types/tap": "^15.0.3",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "benchmark": "^2.1.4",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.2",
    "eslint-plugin-jsdoc": "^34.8.2",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "source-map-support": "^0.5.19",
    "tap": "^15.0.9",
    "testcheck": "^1.0.0-rc.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "homepage": "https://github.com/jdiaz5513/capnp-ts#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "capnp",
    "rpc",
    "typescript"
  ],
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "*.ts": [
        "prettier --write",
        "eslint -p .",
        "git add"
      ]
    },
    "ignore": [
      "packages/capnpc-ts/bin/**/*.ts"
    ]
  },
  "main": "lib/index",
  "prettier": {
    "printWidth": 120
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdiaz5513/capnp-ts.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "benchmark": "make benchmark",
    "build": "make build",
    "build:watch": "nodemon -w ./packages/capnp-ts/src -w ./packages/capnpc-ts/src -i ./packages/capnp-ts/src/std -e .ts -x make build",
    "coverage": "make coverage",
    "coverage:watch": "nodemon -w ./packages/capnp-ts/src -w ./packages/capnpc-ts/src -i ./packages/capnp-ts/src/std -e .ts -x make coverage",
    "lerna": "lerna",
    "lint": "make lint",
    "postinstall": "lerna bootstrap --concurrency 4",
    "prepare": "husky install",
    "prepublishOnly": "make build",
    "publish": "lerna publish --yes --message 'chore: release new version'",
    "test": "make test",
    "test:watch": "nodemon -w ./packages/capnp-ts/src -w ./packages/capnpc-ts/src -i ./packages/capnp-ts/src/std -e .ts -x make test",
    "watch": "npm run test:watch"
  },
  "typings": "lib/index",
  "version": "0.0.1",
  "workspaces": [
    "packages/*"
  ]
}
